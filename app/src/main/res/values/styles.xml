<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar"
        parent="ThemeOverlay.AppCompat.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarTheme"
        parent="ThemeOverlay.AppCompat.Dark">
        <item name="fontFamily">@font/ubuntu_bold</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="statusBarBackground">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="NavigationDrawerTheme" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>


</resources>